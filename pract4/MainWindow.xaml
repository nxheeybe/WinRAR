<Window x:Class="pract4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pract4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="SerializeButton" Content="Сериализовать объект" Click="SerializeButton_Click" HorizontalAlignment="Left" Margin="70,159,0,165" Grid.Row="2" RenderTransformOrigin="0.499,4.603" Width="305" Foreground="#FFDA1515" BorderBrush="#FFAB0E0E"/>
        <Button x:Name="DeserializeButton" Content="Десериализовать объект" Click="DeserializeButton_Click" HorizontalAlignment="Left" Margin="450,159,0,168" Grid.Row="1" Grid.RowSpan="2" Width="288" Foreground="#FF053DEA" BorderBrush="#FF1D16F7"/>

        <TextBlock x:Name="OutputTextBlock" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10" Grid.Row="2"/>
    </Grid>
</Window>